@tailwind base;
@tailwind components;
@tailwind utilities;

/* Design System Custom Properties */
:root {
  /* Primary Colors */
  --color-primary-900: #1e3a5f;
  --color-primary-700: #2c5282;
  --color-primary-500: #4299e1;
  --color-primary-100: #e6f2ff;
  
  /* Secondary Colors */
  --color-secondary-600: #e07a3d;
  --color-secondary-100: #fff5ed;
  
  /* Neutral Colors */
  --color-gray-900: #1a202c;
  --color-gray-700: #4a5568;
  --color-gray-400: #cbd5e0;
  --color-gray-100: #f7fafc;
  --color-white: #ffffff;
  
  /* Semantic Colors */
  --color-success-600: #38a169;
  --color-success-100: #f0fff4;
  --color-warning-600: #d69e2e;
  --color-warning-100: #fffaf0;
  --color-error-600: #e53e3e;
  --color-error-100: #fff5f5;
  --color-info-600: #3182ce;
  --color-info-100: #ebf8ff;
  
  /* Spacing System (8px base) */
  --space-1: 4px;
  --space-2: 8px;
  --space-3: 12px;
  --space-4: 16px;
  --space-6: 24px;
  --space-8: 32px;
  --space-12: 48px;
  --space-16: 64px;
  
  /* Border Radius */
  --radius-sm: 4px;
  --radius-md: 8px;
  --radius-lg: 12px;
  --radius-xl: 16px;
  --radius-full: 9999px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
  --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
  --shadow-lg: 0 10px 15px rgba(0,0,0,0.1);
  --shadow-xl: 0 20px 25px rgba(0,0,0,0.15);
}

/* Accessibility - Focus Indicators */
@layer base {
  *:focus-visible {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 2px;
  }
  
  /* Minimum touch target size */
  button, a, input, textarea, select {
    min-height: 44px;
    min-width: 44px;
  }
}

/* Base Typography */
@layer base {
  body {
    font-family: 'Inter', -apple-system, sans-serif;
    font-size: 16px;
    line-height: 24px;
    color: var(--color-gray-900);
    background-color: var(--color-gray-100);
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Inter', -apple-system, sans-serif;
    font-weight: 600;
  }
}
